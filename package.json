{
  "name": "rizinos",
  "private": true,
  "version": "11.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently --kill-others \"bun run dev:vite\" \"bun run dev:ws\"",
    "dev:vite": "bun --bun vite dev --port 3002",
    "dev:ws": "bun run --watch src/server.ts",
    "build": "bunx --bun vite build && bun build ./src/server.ts --outdir ./build --target bun",
    "deploy": "bun run deploy.ts",
    "preview": "bun run ./build/server.js",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "db:push": "bun node_modules/drizzle-kit/bin.cjs push",
    "db:migrate": "bun node_modules/drizzle-kit/bin.cjs migrate",
    "db:studio": "bun node_modules/drizzle-kit/bin.cjs studio --verbose"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.31.0",
    "@inlang/paraglide-js": "^2.2.0",
    "@sveltejs/adapter-node": "^5.2.13",
    "@sveltejs/kit": "^2.22.5",
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.11",
    "@threlte/core": "^8.1.3",
    "@types/bun": "^1.2.18",
    "@types/eslint": "^9.6.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/nodemailer": "^6.4.17",
    "@types/three": "^0.178.1",
    "arctic": "^3.7.0",
    "daisyui": "^5.0.46",
    "date-fns": "^4.1.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.2",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-svelte": "^3.10.1",
    "globals": "^16.3.0",
    "lucide-svelte": "^0.525.0",
    "nodemailer": "^7.0.5",
    "postgres": "^3.4.7",
    "posthog-js": "^1.257.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "svelte": "^5.35.6",
    "svelte-check": "^4.2.2",
    "tailwindcss": "^4.1.11",
    "three": "^0.178.0",
    "typescript-eslint": "^8.36.0",
    "vite": "^7.0.4",
    "vite-plugin-devtools-json": "^0.2.1",
    "vitest": "^3.2.4",
    "zod": "^4.0.5"
  }
}
